<%= form_for @sporcad do |f|  %>
    <%= render :partial => "shared/errors", :locals => {:record_object => @sporcad}  %>
    <%= collection_select(:sporcad, :academy_id , Academy.all, :id, :name, {:prompt => 'Select Academy'}) %>
    <%= collection_select(:sporcad, :sport_id, Sport.all, :id, :name , {:prompt => 'Select Sport'}) %>
    <%= f.submit %>
<% end %>