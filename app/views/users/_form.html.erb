<%= form_for (@user) do |f| %>
  <%= render :partial => "shared/errors", :locals => {:record_object => @user}  %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Retype Password" %>
  <%= f.password_field :password_confirmation %> <br>

  <%= f.submit "Sign up", :class=> "actions btn btn-large btn-primary" %>
<% end %>